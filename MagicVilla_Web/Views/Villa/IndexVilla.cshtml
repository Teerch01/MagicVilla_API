@model IEnumerable<VillaDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"> Create New Villa</i></a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>Occupancy</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    <th>
                        @villa.Name
                    </th>
                    <th>@villa.Occupancy</th>
                    <th>@villa.Rate.ToString("c")</th>
                    <th><a asp-action="UpdateVilla" asp-route-villaId="@villa.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="DeleteVilla" asp-route-villaId="@villa.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </th>
                </tr>

            }
        </tbody>
    </table>
</div>
